{
  "name": "git-dash",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": "24.x"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run build:packages && run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test:unit": "vitest run",
    "test:unit:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "build:core": "npm run build -w packages/core",
    "build:ui": "npm run build -w packages/ui",
    "build:packages": "run-p build:core build:ui",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "test:packages": "npm run test -ws packages/*",
    "storybook:ui": "npm run storybook -w packages/ui",
    "build-storybook:ui": "npm run build-storybook -w packages/ui",
    "test:ui": "npm run test -w packages/ui",
    "test:run:ui": "npm run test:run -w packages/ui",
    "test:unit:app": "vitest run --dir src"
  },
  "dependencies": {
    "@fontsource/roboto": "^5.2.8",
    "@git-dash/core": "workspace:*",
    "@git-dash/ui": "workspace:*",
    "@mdi/font": "^7.4.47",
    "pinia": "^3.0.3",
    "vite-plugin-vuetify": "^2.1.2",
    "vue": "^3.5.18",
    "vue-router": "^4.5.1",
    "vuetify": "^3.10.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@tsconfig/node22": "^22.0.2",
    "@tsconfig/node24": "^24.0.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.18.11",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/eslint-plugin": "^1.3.4",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "cross-env": "^10.0.0",
    "eslint": "^9.31.0",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-vue": "~10.3.0",
    "jiti": "^2.4.2",
    "jsdom": "^26.1.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "3.6.2",
    "sass-embedded": "^1.93.2",
    "typescript": "~5.8.0",
    "unplugin-fonts": "^1.4.0",
    "vite": "^7.1.10",
    "vite-plugin-vue-devtools": "^8.0.0",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.4"
  }
}
